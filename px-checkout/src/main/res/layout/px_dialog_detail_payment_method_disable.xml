<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/main_container"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/px_dialog_detail_payment_method_disable_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/px_m_margin"
        android:layout_marginRight="@dimen/px_m_margin"
        android:layout_marginTop="@dimen/px_m_alternative_1_margin"
        android:layout_marginBottom="@dimen/px_s_alternative_margin"
        android:textColor="@color/px_disablePaymentMethodDetailDialogTitle"
        app:customStyle="semi_bold"
        android:textSize="@dimen/px_xxl_text"
        android:text="@string/px_dialog_detail_payment_method_disable_card_title"/>

    <com.mercadopago.android.px.internal.view.MPTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/px_xl_alternative_margin"
        android:layout_marginRight="@dimen/px_xl_alternative_margin"
        android:layout_marginBottom="@dimen/px_l_alternative_margin"
        android:textColor="@color/px_disablePaymentMethodDetailDialogDetail"
        android:textSize="@dimen/px_m_text"
        android:text="@string/px_dialog_detail_payment_method_disable_detail"/>

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/px_dialog_detail_payment_method_disable_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/px_disablePaymentMethodDetailDialogLink"
        android:layout_marginLeft="@dimen/px_m_margin"
        android:layout_marginRight="@dimen/px_m_margin"
        android:layout_marginBottom="@dimen/px_xl_margin"
        android:textSize="@dimen/px_l_text"
        android:text="@string/px_dialog_detail_payment_method_disable_link"/>
</LinearLayout>