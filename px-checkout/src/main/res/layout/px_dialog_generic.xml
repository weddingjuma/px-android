<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/ui_1m"
    android:paddingBottom="@dimen/ui_2m"
    android:id="@+id/main_container"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_1m"
        android:layout_marginHorizontal="@dimen/ui_1m"
        android:scaleType="fitXY"
        android:adjustViewBounds="true" />

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/ui_3m"
        android:layout_marginTop="@dimen/ui_2m"
        android:textColor="@color/px_color_translucent_black"
        android:textSize="@dimen/ui_2_5m"
        app:customStyle="semi_bold"
        tools:text="Title" />

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginVertical="@dimen/ui_2m"
        android:layout_marginHorizontal="@dimen/ui_3m"
        android:textColor="@color/px_color_translucent_black"
        android:textSize="@dimen/ui_2m"
        app:customStyle="regular"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />

    <com.mercadolibre.android.ui.widgets.MeliButton
        android:id="@+id/main_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/ui_3m"
        android:layout_marginBottom="@dimen/ui_1m"
        android:textSize="@dimen/ui_2m"
        android:visibility="gone"
        app:type="actionPrimary"
        tools:visibility="visible"
        tools:text="Main action"/>

    <com.mercadolibre.android.ui.widgets.MeliButton
        android:id="@+id/secondary_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/ui_3m"
        android:layout_marginBottom="@dimen/ui_1m"
        android:textSize="@dimen/ui_2m"
        android:visibility="gone"
        app:type="actionSecondary"
        tools:visibility="visible"
        tools:text="Secondary action"/>
</LinearLayout>