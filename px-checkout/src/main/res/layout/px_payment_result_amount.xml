<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:flexWrap="wrap"
    tools:parentTag="com.google.android.flexbox.FlexboxLayout">

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/px_payment_result_component_title"
        android:textSize="@dimen/px_s_text"
        android:layout_marginEnd="@dimen/px_xxxs_margin"
        android:layout_marginRight="@dimen/px_xxxs_margin"
        android:maxLines="1"
        app:customStyle="semi_bold"
        tools:text="3x $500"/>

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/no_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ui_components_success_color"
        android:textSize="@dimen/px_s_text"
        android:layout_marginEnd="@dimen/px_xxxs_margin"
        android:layout_marginRight="@dimen/px_xxxs_margin"
        android:maxLines="1"
        app:customStyle="semi_bold"
        tools:text="sin interÃ©s"/>

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/px_payment_result_component_subtitle"
        android:textSize="@dimen/px_s_text"
        android:layout_marginEnd="@dimen/px_xxxs_margin"
        android:layout_marginRight="@dimen/px_xxxs_margin"
        android:maxLines="1"
        app:customStyle="semi_bold"
        tools:text="(1500)"/>

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/raw_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/px_payment_result_component_subtitle"
        android:textSize="@dimen/px_s_text"
        android:layout_marginEnd="@dimen/px_xxxs_margin"
        android:layout_marginRight="@dimen/px_xxxs_margin"
        android:maxLines="1"
        app:customStyle="semi_bold"
        tools:text="3000"/>

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ui_components_success_color"
        android:textSize="@dimen/px_s_text"
        android:maxLines="1"
        app:customStyle="semi_bold"
        tools:text="50% OFF"/>

</merge>