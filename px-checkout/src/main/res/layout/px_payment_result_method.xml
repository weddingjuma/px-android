<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:parentTag="android.support.constraint.ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/px_white">

    <include layout="@layout/px_payment_result_method_icon"
        android:id="@+id/icon_container"
        android:layout_width="@dimen/px_m_height"
        android:layout_height="@dimen/px_m_height"
        android:layout_marginStart="@dimen/px_l_margin"
        android:layout_marginTop="@dimen/px_s_margin"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.mercadopago.android.px.internal.view.PaymentResultAmount
        android:id="@+id/amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        android:layout_marginStart="@dimen/px_s_margin"
        android:layout_marginEnd="@dimen/px_l_margin"
        android:layout_marginTop="@dimen/px_s_margin"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/icon_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/description"/>

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px_s_margin"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/px_l_margin"
        android:lineSpacingExtra="@dimen/px_xxxs_margin"
        android:textColor="@color/px_payment_result_method_detail"
        android:textSize="@dimen/px_xs_text"
        app:layout_constraintBottom_toTopOf="@id/pm_statement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_container"
        app:layout_constraintTop_toBottomOf="@id/amount"
        tools:text="Mastercard terminada en 3260" />

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/pm_statement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/px_payment_result_method_detail"
        android:textSize="@dimen/px_xs_text"
        android:lineSpacingExtra="@dimen/px_xxxs_margin"
        tools:text="Procesado por Mercado Pago Agregador"
        android:layout_marginStart="@dimen/px_s_margin"
        android:layout_marginEnd="@dimen/px_l_margin"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/icon_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintBottom_toTopOf="@id/statement"/>

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/statement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/px_payment_result_method_detail"
        android:textSize="@dimen/px_xs_text"
        android:lineSpacingExtra="@dimen/px_xxxs_margin"
        tools:text="En tu estado de cuenta verás el cargo como MERCADOPAGO"
        android:layout_marginStart="@dimen/px_s_margin"
        android:layout_marginEnd="@dimen/px_l_margin"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/icon_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pm_statement"
        app:layout_constraintBottom_toTopOf="@id/info_title"/>

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/px_payment_result_component_title"
        android:textSize="@dimen/px_s_text"
        android:lineSpacingExtra="@dimen/px_xxxs_margin"
        tools:text="En tu estado de cuenta verás el cargo como MERCADOPAGO"
        android:layout_marginTop="@dimen/px_s_margin"
        android:layout_marginStart="@dimen/px_l_margin"
        android:layout_marginEnd="@dimen/px_l_margin"
        app:layout_constraintTop_toBottomOf="@id/statement"
        app:layout_constraintBottom_toTopOf="@id/info_subtitle"/>

    <com.mercadopago.android.px.internal.view.MPTextView
        android:id="@+id/info_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/px_payment_result_component_subtitle"
        android:textSize="@dimen/px_xs_text"
        android:lineSpacingExtra="@dimen/px_xxxs_margin"
        tools:text="En tu estado de cuenta verás el cargo como MERCADOPAGO"
        android:layout_marginStart="@dimen/px_l_margin"
        android:layout_marginEnd="@dimen/px_l_margin"
        android:layout_marginTop="@dimen/px_xxxs_margin"
        app:layout_constraintTop_toBottomOf="@id/info_title"
        app:layout_constraintBottom_toBottomOf="@id/bottom_space"/>

    <Space
        android:id="@+id/bottom_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_s_margin"
        app:layout_constraintTop_toBottomOf="@id/info_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"/>

</merge>